<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewStandard" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewScreenName" parent="TextViewStandard">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewFromHomeDestination" parent="TextViewStandard">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">@dimen/home_recycler_item_padding_horizontal</item>
    </style>

    <style name="EditTextStandard" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
    </style>
</resources>