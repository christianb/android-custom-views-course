<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.techyourchance.androidviews.exercises._05_.MyCheckmarkView
        android:id="@+id/viewCheckmarkWide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewCheckmarkTall"
        android:layout_marginHorizontal="@dimen/padding_screen_horizontal_standard"
        />

    <com.techyourchance.androidviews.exercises._05_.MyCheckmarkView
        android:id="@+id/viewCheckmarkTall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintTop_toBottomOf="@id/viewCheckmarkWide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/padding_screen_horizontal_standard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>